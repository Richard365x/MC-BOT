{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "build",
    "guild",
    "channels",
    "categories",
    "roles",
    "xp",
    "permissions",
    "behaviour"
  ],
  "properties": {
    "build": {
      "type": "string"
    },
    "lastUpdated": {
      "type": "string"
    },
    "guild": {
      "type": "object",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "channels": {
      "type": "object",
      "required": [
        "battleAnnouncements",
        "battleLogs"
      ],
      "properties": {
        "battleAnnouncements": {
          "type": "string"
        },
        "battleLogs": {
          "type": "string"
        },
        "battleArchive": {
          "type": "string"
        }
      }
    },
    "categories": {
      "type": "object",
      "required": [
        "privateBattles"
      ],
      "properties": {
        "privateBattles": {
          "type": "string"
        }
      }
    },
    "roles": {
      "type": "object",
      "required": [
        "winner",
        "loser",
        "owner",
        "leagueDirector",
        "ranks",
        "typesOrdered"
      ],
      "properties": {
        "winner": {
          "type": "string"
        },
        "loser": {
          "type": "string"
        },
        "owner": {
          "type": "string"
        },
        "leagueDirector": {
          "type": "string"
        },
        "ranks": {
          "type": "object",
          "required": [
            "S",
            "Apex",
            "A",
            "B",
            "C",
            "D",
            "E"
          ],
          "properties": {
            "S": {
              "type": "string"
            },
            "Apex": {
              "type": "string"
            },
            "A": {
              "type": "string"
            },
            "B": {
              "type": "string"
            },
            "C": {
              "type": "string"
            },
            "D": {
              "type": "string"
            },
            "E": {
              "type": "string"
            }
          }
        },
        "typesOrdered": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        }
      }
    },
    "xp": {
      "type": "object",
      "required": [
        "loserXpByRank",
        "loserFlatRoleId",
        "loserFlatXp"
      ],
      "properties": {
        "winnerAwardRoleId": {
          "type": "string"
        },
        "winnerXp": {
          "type": "number"
        },
        "loserXpByRank": {
          "type": "object",
          "required": [
            "S",
            "Apex",
            "A",
            "B",
            "C",
            "D",
            "E"
          ],
          "properties": {
            "S": {
              "type": "number"
            },
            "Apex": {
              "type": "number"
            },
            "A": {
              "type": "number"
            },
            "B": {
              "type": "number"
            },
            "C": {
              "type": "number"
            },
            "D": {
              "type": "number"
            },
            "E": {
              "type": "number"
            }
          }
        },
        "loserFlatRoleId": {
          "type": "string"
        },
        "loserFlatXp": {
          "type": "number"
        }
      }
    },
    "permissions": {
      "type": "object",
      "properties": {
        "canSetOrder": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "canSetResult": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "canRotateOrder": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "behaviour": {
      "type": "object",
      "required": [
        "challengePrivateChannelTTLHours",
        "autopingHoursBeforeClose"
      ],
      "properties": {
        "challengePrivateChannelTTLHours": {
          "type": "number"
        },
        "autopingHoursBeforeClose": {
          "type": "number"
        }
      }
    }
  }
}